{
  "name": "cursor-dating-app",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "lint": "biome check src test/run-biome-rules-tests.mjs biome.json",
    "lint:fix": "biome check --write src test/run-biome-rules-tests.mjs biome.json",
    "lint:duplication": "jscpd src/",
    "lint:unused-exports": "ts-prune",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:biome-rules",
    "test:biome-rules": "node test/run-biome-rules-tests.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "jscpd": "^4.0.8",
    "ts-prune": "^0.10.3",
    "typescript": "~5.7.0"
  },
  "engines": {
    "node": ">=20"
  }
}
